<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Owner Dashboard | DesignDekhoo</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .section {
            display: none;
        }
        .active-section {
            display: block;
        }
    </style>
</head>
<body class="dashboard-page">

    <div class="dashboard-layout">
        <!-- || SIDEBAR -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <div id="siteLogo" class="logo">
                  Design Dekhoo
                </div>
            </div>
            <div class="shop-profile">
                <div class="profile-avatar" id="sidebar-shop-initial"></div>
                <div class="profile-info">
                    <h3 id="shopDisplayName"><%= user?.shopName || "My Shop" %></h3>
                </div>
            </div>
            <nav class="sidebar-nav">
                <div class="sidebar">
                  <button class="nav-btn" data-section="dashboard-home">Dashboard</button>
                  <button class="nav-btn" data-section="catalog-home">My Catalog</button>
                  <button class="nav-btn" data-section="add-product-home">Add Product</button>
                  <button class="nav-btn" data-section="categories-home">Categories</button>
                  <button class="nav-btn" data-section="profile-home">Profile</button>
                  <button class="nav-btn" data-section="share-home">Share Catalog</button>
                  <button id="logoutBtn" class="nav-btn logout-btn">Logout</button>
                </div>
            </nav>
        </aside>

        <!-- || MAIN CONTENT -->
        <main class="dashboard-main">
            <header class="dashboard-header">
                <button class="sidebar-toggle-btn">â˜°</button>
                <div class="profile-actions">
                    <div class="profile-avatar" id="navbar-profile-avatar"></div>
                    <div class="profile-dropdown" id="profile-dropdown">
                        <a href="#" id="profile-link">My Profile</a>
                        <form action="/api/auth/logout" method="POST" id="logout-form-dropdown">
                            <button type="submit" class="dropdown-item">Logout</button>
                        </form>
                    </div>
                </div>
            </header>

            <div class="dashboard-content">

              <section id="dashboard-home" class="section active-section">
                <div class="dashboard-section-header">
                  <h2>Dashboard Overview</h2>
                  <div class="divider"></div>
                </div>

                <div class="dashboard-stats-grid">
                  <div class="stat-card">
                    <p class="stat-value"><%= typeof totalProducts !== 'undefined' ? totalProducts : 0 %></p>
                    <p class="stat-label">Total Products</p>
                  </div>
                  <div class="stat-card">
                    <p class="stat-value"><%= typeof totalCategories !== 'undefined' ? totalCategories : 0 %></p>
                    <p class="stat-label">Total Categories</p>
                  </div>
                </div>

                <div class="performance-card">
                   <h3>Performance Overview</h3>
                   <div class="graph-placeholder">
                       <p>Graph insights will appear here</p>
                   </div>
                </div>
              </section>

              <section id="catalog-home" class="section">
                <h2>My Catalog</h2>
                <div class="filter-controls">
                  <div class="custom-select-wrapper filter-category-select">
                    <div class="custom-select-display" id="categoryFilterDisplay" data-placeholder="Filter by Category">All Categories</div>
                    <div class="custom-select-options" id="categoryFilterOptions">
                      <div class="custom-select-option" data-value="all">All Categories</div>
                      <% if (categories && categories.length > 0) { %>
                        <% categories.forEach(category => { %>
                          <div class="custom-select-option" data-value="<%= category._id %>">
                            <%= category.name %>
                          </div>
                        <% }); %>
                      <% } %>
                    </div>
                  </div>
                </div>
                <div id="catalogContainer">
                  <p>Loading products...</p>
                </div>
              </section>

              <section id="add-product-home" class="section">
                <h2>Add Product</h2>
                <form id="addProductForm" class="dashboard-form card-form" method="POST" action="/api/catalog/add" enctype="multipart/form-data">
                  <div class="form-grid">
                    <div class="form-group">
                      <label for="productName">Product Name</label>
                      <input type="text" id="productName" name="title" placeholder="e.g., Modern Sofa" required>
                    </div>
                    <div class="form-group">
                      <label for="productPrice">Price</label>
                      <input type="number" id="productPrice" name="price" placeholder="e.g., 499.99" min="0" step="0.01" required>
                    </div>

                    <div class="form-group">
                      <label for="productCategory">Category</label>
                      <div class="custom-select-wrapper" id="categorySelectWrapper">
                        <input type="hidden" id="productCategory" name="category" value="" required>
                        <div class="custom-select-display" data-placeholder="Select Category">Select Category</div>
                        <div class="custom-select-options" id="categoryOptions">
                          <% if (categories && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                              <div class="custom-select-option" data-value="<%= category._id %>">
                                <%= category.name %>
                              </div>
                            <% }); %>
                          <% } %>
                          <div class="custom-select-option custom-add-option" data-value="__custom__">+ Add New Category</div>
                          <div class="custom-add-input-container" style="display:none;">
                            <input type="text" placeholder="New Category Name" class="custom-add-input">
                            <button type="button" class="custom-add-button btn-sm btn-primary">Add</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="productMaterial">Material</label>
                      <div class="custom-select-wrapper" id="materialSelectWrapper">
                        <input type="hidden" id="productMaterial" name="material" value="" required>
                        <div class="custom-select-display" data-placeholder="Select Material">Select Material</div>
                        <div class="custom-select-options" id="materialOptions">
                          <% if (materials && materials.length > 0) { %>
                            <% materials.forEach(material => { %>
                              <div class="custom-select-option" data-value="<%= material._id %>">
                                <%= material.name %>
                              </div>
                            <% }); %>
                          <% } %>
                          <div class="custom-select-option custom-add-option" data-value="__custom__">+ Add New Material</div>
                          <div class="custom-add-input-container" style="display:none;">
                            <input type="text" placeholder="New Material Name" class="custom-add-input">
                            <button type="button" class="custom-add-button btn-sm btn-primary">Add</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="form-group full-width">
                      <label for="productDescription">Description</label>
                      <textarea id="productDescription" name="description" rows="4" placeholder="Describe your product..."></textarea>
                    </div>

                    <div class="form-group full-width">
                      <label for="productImage">Product Image</label>
                      <input type="file" id="productImage" name="images" accept="image/*" multiple>
                      <small>Upload up to 5 images.</small>
                    </div>
                  </div>
                  <div class="form-actions">
                    <button type="submit" class="btn-primary">Add Product</button>
                  </div>
                </form>
              </section>

              <section id="edit-product-home" class="section">
                <h2>Edit Product Section</h2>
                <p>Form to edit product will be here.</p>
              </section>

              <section id="categories-home" class="section">
                <h2>Categories Section</h2>
                <p>Manage your product categories here.</p>
              </section>

              <section id="profile-home" class="section">
                <h2>Profile Section</h2>
                <p>Manage your shop profile settings here.</p>
              </section>

              <section id="share-home" class="section">
                <h2>Share Catalog Section</h2>
                <p>Options to share your catalog will be here.</p>
              </section>

            </div>
        </main>
    </div>

    <!-- Modals and other global elements if any, go here.
         Existing modals like share-catalog-modal and logout-confirm-modal
         are intentionally omitted for a clean structural reset, as per strict instructions.
         These would be re-added as part of subsequent feature implementations if required. -->

    <script src="/js/dashboard.js"></script>

    <div id="logoutModal">
      <div class="modal-content">
        <h3>Logout?</h3>
        <p>Are you sure you want to logout?</p>
        <div class="modal-actions">
          <button id="cancelLogout">Cancel</button>
          <button id="confirmLogout">Logout</button>
        </div>
      </div>
    </div>

    <!-- Image Carousel Modal -->
    <div id="imageCarouselModal" class="modal-overlay">
      <div class="modal-content product-carousel-modal">
        <button class="modal-close-btn">&times;</button>
        <div class="carousel-display">
          <img id="carouselMainImage" src="" alt="Product Image">
          <button id="carouselPrev" class="carousel-arrow prev-arrow">&lt;</button>
          <button id="carouselNext" class="carousel-arrow next-arrow">&gt;</button>
        </div>
        <div class="carousel-thumbnails" id="carouselThumbnails">
          <!-- Thumbnails will be injected here -->
        </div>
      </div>
    </div>
</body>
</html>