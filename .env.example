# .env file

# MongoDB Atlas Connection String
# Replace <username>, <password>, and <cluster-name> with your actual credentials and cluster name.
# Ensure 'designdekhoo-cluster' is your database name.
# The appName parameter is set to 'Design Dekhoo'.

MONGO_URI="mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/designdekhoo-cluster?retryWrites=true&w=majority&appName=Design%20Dekhoo"

# JWT Secret (DO NOT CHANGE unless you know what you are doing)
JWT_SECRET="your_jwt_secret_here"

# Cloudinary Configuration (DO NOT CHANGE unless you know what you are doing)
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Port for the server (default is 3000)
PORT=3000
